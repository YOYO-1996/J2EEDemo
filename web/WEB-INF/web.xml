<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>charsetEncodingFilter</filter-name>
        <filter-class>utils.EncodingFilter</filter-class>
        <init-param>
            <param-name>CharsetEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>charsetEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>StaffOperationServlet</servlet-name>
        <servlet-class>servlet.StaffOperationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffOperationServlet</servlet-name>
        <url-pattern>/Staff/*</url-pattern>
    </servlet-mapping>
</web-app>